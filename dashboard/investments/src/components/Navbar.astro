<header class="fixed w-full bg-background/90 dark:bg-background-dark/90 backdrop-blur-sm z-50 shadow-sm">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/" class="flex items-center gap-2">
      <span class="text-primary font-bold text-2xl" data-i18n="navbar.title">Capital Investments</span>
    </a>
    
    <nav class="hidden md:flex items-center gap-6">
      <a href="#inicio" class="text-text dark:text-gray-200 hover:text-primary transition-colors" data-i18n="navbar.home">Inicio</a>
      <a href="#servicios" class="text-text dark:text-gray-200 hover:text-primary transition-colors" data-i18n="navbar.services">Servicios</a>
      <a href="#ventajas" class="text-text dark:text-gray-200 hover:text-primary transition-colors" data-i18n="navbar.advantages">Ventajas</a>
      <a href="#testimonios" class="text-text dark:text-gray-200 hover:text-primary transition-colors" data-i18n="navbar.testimonials">Testimonios</a>
      <a href="#contacto" class="text-text dark:text-gray-200 hover:text-primary transition-colors" data-i18n="navbar.contact">Contacto</a>
    </nav>
    
    <div class="flex items-center gap-4">
      <button id="theme-toggle" class="p-2 rounded-full hover:bg-card transition-colors" data-i18n-attr="aria-label:navbar.toggleTheme" aria-label="Cambiar tema">
        <svg xmlns="http://www.w3.org/2000/svg" class="hidden dark:block h-5 w-5 text-yellow-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="block dark:hidden h-5 w-5 text-slate-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
      
      <!-- Menú móvil -->
      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-card transition-colors" aria-label="Menú">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-text" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Menú móvil desplegable -->
  <div id="mobile-menu" class="md:hidden hidden bg-card dark:bg-gray-800 absolute w-full shadow-md">
    <div class="container mx-auto px-4 py-3 flex flex-col gap-4">
      <a href="#inicio" class="text-text dark:text-gray-200 hover:text-primary transition-colors py-2" data-i18n="navbar.home">Inicio</a>
      <a href="#servicios" class="text-text dark:text-gray-200 hover:text-primary transition-colors py-2" data-i18n="navbar.services">Servicios</a>
      <a href="#ventajas" class="text-text dark:text-gray-200 hover:text-primary transition-colors py-2" data-i18n="navbar.advantages">Ventajas</a>
      <a href="#testimonios" class="text-text dark:text-gray-200 hover:text-primary transition-colors py-2" data-i18n="navbar.testimonials">Testimonios</a>
      <a href="#contacto" class="text-text dark:text-gray-200 hover:text-primary transition-colors py-2" data-i18n="navbar.contact">Contacto</a>
    </div>
  </div>
</header>

<script>
  // Manejo del menú móvil
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
      
      // Cerrar el menú al hacer clic en un enlace
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  });
</script>
